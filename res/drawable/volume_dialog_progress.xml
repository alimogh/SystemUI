<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@android:id/background">
        <shape android:tint="@color/op_volume_seekbar_bg_color" android:shape="rectangle">
            <size android:height="4dp"/>
            <solid android:color="@color/op_volume_seekbar_bg_color"/>
            <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
        </shape>
    </item>
    <item android:gravity="left|right|center_vertical|center_horizontal|fill_horizontal|center" android:id="@android:id/progress">
        <scale android:scaleWidth="100%">
            <selector>
                <item android:state_enabled="false" android:drawable="@android:color/transparent"/>
                <item>
                    <shape android:tint="#43a5f6" android:shape="rectangle">
                        <size android:height="4dp"/>
                        <solid android:color="#43a5f6"/>
                        <corners android:topLeftRadius="2dp" android:topRightRadius="2dp" android:bottomLeftRadius="2dp" android:bottomRightRadius="2dp"/>
                    </shape>
                </item>
            </selector>
        </scale>
    </item>
</layer-list>
